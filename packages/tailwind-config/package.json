{
    "name": "@morsz/tailwind-config",
    "version": "0.0.0",
    "type": "module",
    "private": true,
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist"
    ],
    "exports": {
        ".": "./dist/index.css",
        "./theme": "./theme.css",
        "./postcss": "./postcss.config.js"
    },
    "scripts": {
        "build:styles": "bunx tailwindcss -i ./globals.css -o ./dist/index.css",
        "build:components": "tsc",
        "check-types": "tsc --noEmit",
        "dev:styles": "bunx tailwindcss -i ./globals.css -o ./dist/index.css --watch",
        "dev:components": "tsc --watch",
        "lint": "eslint src --max-warnings 0",
        "format": "prettier --cache --write ."
    },
    "devDependencies": {
        "postcss": "^8.5.3",
        "tailwindcss": "^4.1.5",
        "tw-animate-css": "^1.3.6"
    }
}
